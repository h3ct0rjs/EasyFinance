{{> headers }}
<div class="container">
<h1>{{title}}</h1>  
    {{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{this.msg}}</div>
      {{/each}}
    {{/if}}
    <form method="post" action="/users/register">      
  
      <div class="form-group">
          <div class="form-group">
          <label for="fname">First Name</label>
          <input type="txt" class="form-control" id="fname"  placeholder="First Name" name="fname">
      </div>

      <div class="form-group">
          <label for="lname">Last Name</label>
          <input type="txt" class="form-control" id="sname"  placeholder="Second Name" name="sname">
      </div>

      <div class="form-group">
        <label for="username">Username</label>
        <input type="txt" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Username" name="username">
      </div>

      <div class="form-group">
        <label for="id">ID</label>
        <input type="txt" class="form-control" id="id" aria-describedby="emailHelp" placeholder="1088999999" name="id">
        <small id="emailHelp" class="form-text text-muted">We'll never share your id number identification with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="email_address">Email address</label>
        <input type="email" class="form-control" id="email_address" aria-describedby="emailHelp" placeholder="Enter email" name="email_address">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password" name="password">
      </div>

      <div class="form-group">
        <label for="password">Re-enter Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password" name="password_match">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{{> footer-end }}